# Backend Dockerfile for Back4App - Node.js + Express
FROM node:18-alpine

WORKDIR /app

# Copy package files from server directory
COPY server/package.json server/package-lock.json ./

# Install dependencies
RUN npm install

# Copy source code from server directory
COPY server/ .

# Expose port
EXPOSE 5000

# Start server
CMD ["npm", "run", "dev"]
